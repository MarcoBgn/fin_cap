<div class="l-constrained">
  <div class="hero hero--blue styleguide__hero">
    <h1 class="hero__heading">
      <%= t('evidence_hub.summaries.header') %>
    </h1>
  </div>

  <div class="row l-2col">
    <div class="l-2col-side">
      <div class="sidepanel">
        <% present(@documents, EvidenceSummariesPresenter) do |evidence_summaries_presenter| %>
          <%= evidence_summaries_presenter.thematic_review_message %>
        <% end %>

        <h4 class="sidepanel__title">Keyword search</h4>

        <%= render 'search_form' %>
      </div>
    </div>
    <div class="l-2col-main">
      <div class="pagination__wrap">
        <% present(@documents, EvidenceSummariesPresenter) do |evidence_summaries_presenter| %>
          <div class="pagination__description"><%= evidence_summaries_presenter.total_results_description %></div>
          <div class="pagination">
            <%= evidence_summaries_presenter.previous_page %>
            <%= evidence_summaries_presenter.pagination_description %>
            <%= evidence_summaries_presenter.next_page %>
          </div>
        <% end %>
      </div>

      <ul class="search-results">
        <% present_collection(@evidence_summaries).each do |document| %>
          <%= render 'search_result', document: document %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
